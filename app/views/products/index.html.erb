<p id="notice"><%= notice %></p>

<h1>Products</h1>

<row>
  <% if current_user %>
    <span class="span ml-3"><%= current_user.email %></span>
    <span class="span ml-3"><%= link_to 'Logout', destroy_user_session_path , method: :delete %></span>
  <% else %>
    <span class="span ml"><%= link_to 'Login', user_session_path %></span>
  <%end%>
</row>

<row class="row-mt-2">
  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Product name</th>
          <th>Product detail</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= product.product_detail %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
            <td>
            <% product.category.collect {|category| "#{category.category_name}"}.each do |c| %>
              <%= c %>
            <%end%>
            </td>
            <td>
              <span style="margin-right: 5%"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, product %></span>
              <span style="margin-right: 5%"><%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_product_path(product) %></span>
              <span style="margin-right: 5%"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</row>
<br>

<span class="span ml"><%= link_to 'Category', categories_path %></span>
<%if current_user %>
  <div class="mb-2">
    <% link_to new_product_path do %>
      <%= button_tag 'Add new product', class: 'btn btn-primary' %>
    <%end%>
  </div>
<%end%>

<%= link_to '<button type="button">New Product</button>'.html_safe, new_product_path %>

