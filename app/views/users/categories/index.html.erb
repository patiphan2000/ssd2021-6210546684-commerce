<p id="notice"><%= notice %></p>

<h1>Category</h1>
<row class="row-mt-2">
  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Category name</th>
          <th>Category description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.category_name %></td>
            <td><%= category.category_description %></td>
            <td>
              <span style="margin-right: 5%"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, users_category_path(category) %></span>
              <span style="margin-right: 5%"><%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_users_category_path(category) %></span>
              <span style="margin-right: 5%"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, users_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</row>
<br>

<%= link_to new_users_category_path do %>
      <%= button_tag 'New Category', class: 'btn btn-primary' %>
    <%end%>
