<p id="notice"><%= notice %></p>

<h1>Order</h1>

<row>
  <% if current_user %>
    <span class="span ml-3"><%= current_user.email %></span>
    <span class="span ml-3"><%= link_to 'Logout', destroy_user_session_path , method: :delete %></span>
  <% else %>
    <span class="span ml"><%= link_to 'Login', user_session_path %></span>
  <%end%>
</row>

<% if current_user %>
<row class="row-mt-2">
  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>order id</th>
          <th>customer name</th>
          <th>address</th>
          <th>postal code</th>
          <th>order date</th>
          <th>product</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.customer_name %></td>
            <td><%= order.address %></td>
            <td><%= order.postal_code %></td>
            <td><%= order.order_date || 'NA' %></td>
            <td><%= order.product_id %></td>
            <td>
              <span style="margin-right: 5%"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, order %></span>
              <span style="margin-right: 5%"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, order, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</row>
<br>

<%else%>
<h3>You don't belong here...</h3>
<%end%>
